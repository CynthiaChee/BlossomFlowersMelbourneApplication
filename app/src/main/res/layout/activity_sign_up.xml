<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/fullNameEdit"
        android:layout_width="272dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addPhoto" />

    <EditText
        android:id="@+id/signupDateofBirthEditText"
        android:layout_width="272dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="Date of Birth"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullNameEdit" />

    <EditText
        android:id="@+id/signupAddressEditText"
        android:layout_width="272dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupDateofBirthEditText" />

    <EditText
        android:id="@+id/usernameEdit"
        android:layout_width="272dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupAddressEditText" />

    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="208dp"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/purple_400"
        android:onClick="createAccountClick"
        android:text="CREATE ACCOUNT"
        android:textColor="@color/white"
        app:cornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberEdit" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="272dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameEdit" />

    <EditText
        android:id="@+id/confirmPasswordEdit"
        android:layout_width="272dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText" />

    <EditText
        android:id="@+id/phoneNumberEdit"
        android:layout_width="272dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordEdit" />

    <ImageView
        android:id="@+id/addPhoto"
        android:layout_width="125dp"
        android:layout_height="108dp"
        android:layout_marginTop="50dp"
        android:onClick="addDisplayPicture"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/addphoto" />

</androidx.constraintlayout.widget.ConstraintLayout>
